{
  "metadata": {
    "spec-version": "1.5"
  },
  "configuration-groups": [
    {
      "label": "Authorization",
      "properties": [
        {
          "name": "authorizationMethod",
          "label": "Authorization method",
          "widget-type": "select",
          "widget-attributes": {
            "values": [
              "API key",
              "Private app access token"
            ]
          }
        },
        {
          "widget-type": "securekey-text",
          "label": "API Key",
          "name": "apiKey"
        },
        {
          "widget-type": "securekey-text",
          "label": "Private app access token",
          "name": "accessToken"
        },
        {
          "widget-type" : "hidden",
          "label": "OAuth Information",
          "name": "oAuthInfo"
        }
      ]
    },
    {
      "label": "Properties",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "hidden",
          "name": "apiServerUrl"
        },
        {
          "widget-type": "securekey-text",
          "label": "API Key",
          "name": "apiKey"
        },
        {
          "name": "objectType",
          "label": "Objects",
          "widget-type": "select",
          "widget-attributes": {
            "values": [
              "Contact Lists",
              "Contacts",
              "Companies",
              "Deals",
              "Deal Pipelines",
              "Marketing Email",
              "Products",
              "Tickets"
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Input Field Name",
          "name": "objectField"
        }
      ]
    }
  ],
  "outputs": [],
  "filters": [
    {
      "name": "Select API key",
      "condition": {
        "expression": "authorizationMethod == 'API key'"
      },
      "show": [
        {
          "name": "apiKey",
          "type": "property"
        }
      ]
    },
    {
      "name": "Select private app access token",
      "condition": {
        "expression": "authorizationMethod == 'Private app access token'"
      },
      "show": [
        {
          "name": "accessToken",
          "type": "property"
        }
      ]
    }
  ]
}
